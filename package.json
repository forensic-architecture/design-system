{
  "name": "fa-design-system",
  "private": true,
  "description": "Forensic Architecture's React component library",
  "license": "Do No Harm",
  "version": "0.2.0",
  "type": "module",
  "main": "./dist/react.js",
  "browser": {
    "./react": "./dist/react.js",
    "./vue": "./dist/vue.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/forensic-architecture/design-system"
  },
  "dependencies": {
    "marked": "^1.1.1",
    "react-image": "^4.0.3"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:react:lib": "rollup -c rollup.react.js",
    "build:vue:lib": "rollup -c rollup.vue.js",
    "build:react:watch": "npm run build:react:lib -- -w",
    "build:vue:watch": "npm run build:vue:lib -- -w",
    "build:react:storybook": "build-storybook -s public",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:app": "react-scripts start",
    "start:storybook": "start-storybook -p 6006 -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
